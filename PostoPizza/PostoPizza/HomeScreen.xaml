<Page x:Class="PostoPizza.Images.HomeScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PostoPizza.Images"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="HomeScreen" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto">

    <Grid Background="#FFF5F5F3" MouseDown="openMenu" SizeChanged="resizeHome">
        <Image x:Name="image" Source="Images/PostoLogo.gif" Margin="113,0,115,0" Width="Auto" Height="230" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Touch to Start" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="Auto" Width="Auto" FontFamily="Century Gothic" FontSize="20" Foreground="#FF555555" Margin="0,0,0,50" />
        <Button x:Name="button" Content="Help (?)" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="Auto" Margin="10,270,0,10" BorderBrush="#00707070" Background="#00DDDDDD" Foreground="#FF555555"/>
        <Label x:Name="label1" Content="12:00 PM" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="#FF555555"/>

    </Grid>
</Page>

<UserControl x:Class="PostoPizza.OrderMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PostoPizza"
             mc:Ignorable="d" Height="Auto" Width="216.934">
    <Grid Height="Auto" Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,1,0" SizeChanged="Grid_SizeChanged">
        
        <DockPanel Width="Auto" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Left">
            <TextBox x:Name="label" Text="Label" Background="Transparent" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="300" Foreground="#FFEFEDCC" FontSize="18" BorderBrush="Transparent" FontFamily="Century Gothic"/>
            <Button x:Name="xButton" Content="X" FontSize="14" Width="48" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Stretch" Click="Button_Click"/>
        </DockPanel>
        
    </Grid>
</UserControl>

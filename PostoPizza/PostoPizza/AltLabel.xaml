<UserControl x:Class="PostoPizza.AltLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PostoPizza"
             mc:Ignorable="d" Height="Auto" Width="Auto">
    <Grid Height="Auto" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <DockPanel HorizontalAlignment="Center" Height="Auto" VerticalAlignment="Stretch" Width="Auto">
            <Label x:Name="Title" Content="Label"   FontWeight="Bold" Foreground="#efedcc" Height="Auto" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" Background="{x:Null}"/>
            <Image x:Name="Labelimg" VerticalAlignment="Stretch" HorizontalAlignment="Left" Height="Auto" Width="Auto" />
        </DockPanel>
    </Grid>
</UserControl>

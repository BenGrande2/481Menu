<UserControl x:Class="PostoPizza.IngredientModifier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PostoPizza"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid SizeChanged="resize">

        <StackPanel Width="Auto" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Horizontal">
            <StackPanel x:Name="Stack1">
                <Button Content="+" Background="#FFF5F5F3" FontFamily="Century Gothic" FontWeight="Bold" FontSize="16"></Button>
                <Button Content="-" Background="#FFF5F5F3" FontFamily="Century Gothic" FontWeight="Bold" FontSize="16"></Button>
            </StackPanel>
            <StackPanel x:Name="Stack2">
                <Image x:Name="ingImg" Height="100" Width="Auto"></Image>
                <Label x:Name="ingName"></Label>
            </StackPanel>
            <Button Content="X" x:Name="Stack3" Background="#FFF5F5F3" FontWeight="Bold" FontFamily="Century Gothic"></Button>
        </StackPanel>

    </Grid>
</UserControl>

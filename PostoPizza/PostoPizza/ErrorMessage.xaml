<UserControl x:Class="PostoPizza.ErrorMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PostoPizza"
             mc:Ignorable="d" d:DesignWidth="300" Height="152.101">
    <Grid Background="#FFF5F5F3">
        <Label x:Name="Header" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" FontFamily="Century Gothic" FontWeight="Bold"/>
        <TextBlock x:Name="Body" HorizontalAlignment="Left" Margin="0,31,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="84" Width="290" FontFamily="Century Gothic"/>
        <Button Margin="0,120,0,0" Content="Close" Background="#FFEFEDCC" FontFamily="Century Gothic" FontWeight="Bold" Click="Button_Click"></Button>
    </Grid>
</UserControl>

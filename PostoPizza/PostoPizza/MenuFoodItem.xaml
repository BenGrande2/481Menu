<UserControl x:Class="PostoPizza.MenuFoodItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PostoPizza"
             mc:Ignorable="d" Height="Auto" Width="Auto"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid  Height="Auto" Width="Auto"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel x:Name="sp" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Stretch" Width="Auto">
            <Label x:Name="Title" Content="Label"   FontWeight="Bold" Foreground="#efedcc" Height="Auto" Width="Auto" HorizontalAlignment="Stretch" Padding="10" VerticalAlignment="Stretch" Background="{x:Null}"/>
            <TextBox x:Name="Description" TextWrapping="Wrap" Text="TextBox" Foreground="White" Background="{x:Null}" BorderBrush="{x:Null}" Padding="5" IsEnabled="False" Height="Auto" Width="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </StackPanel>

    </Grid>
</UserControl>
